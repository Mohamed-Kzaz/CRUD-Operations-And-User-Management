@model EmployeeViewModel
@inject IDepartmentRepository deptRepo
@{
    ViewData["Title"] = "Edit";

    //var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
    var Departments = new SelectList(deptRepo.GetAll().Result, "Id", "Name");
}

<h1>Update Employees</h1>
<br />
<br />


<div class="row nb-3">
    <div class="col-8">
        <form asp-action="Update" asp-controller="Employee" enctype="multipart/form-data">
            <partial name="Partial/CreateEditPartialView" model="@Model" />
            <br />
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}