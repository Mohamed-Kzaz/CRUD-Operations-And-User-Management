@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />

<a asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
<br />

<form class="my-3" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M => M.Name)</th>
                <th>@Html.DisplayNameFor(M => M.Age)</th>
                <th>@Html.DisplayNameFor(M => M.Image)</th>
                <th>@Html.DisplayNameFor(M => M.Address)</th>
                <th>@Html.DisplayNameFor(M => M.Email)</th>
                <th>@Html.DisplayNameFor(M => M.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(M => M.Salary)</th>
                <th>@Html.DisplayNameFor(M => M.HireDate)</th>
                <th>@Html.DisplayNameFor(M => M.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => item.Name)</td>
                    <td>@Html.DisplayFor(M => item.Age)</td>
                    <td>
                        <img src="~/Files/Imgs/@item.ImgUrl" class="img-circle" height="40" width="40" alt="@item.Name Image" />
                    </td>
                    <td>@Html.DisplayFor(M => item.Address)</td>
                    <td>@Html.DisplayFor(M => item.Email)</td>
                    <td>@Html.DisplayFor(M => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(M => item.Salary)</td>
                    <td>@Html.DisplayFor(M => item.HireDate)</td>
                    <td>@Html.DisplayFor(M => item.IsActive)</td>
                  <partial name="_ButtonsViewPartial" model="@item.Id.ToString()"/>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Employees Found!! </h4>
    </div>
}